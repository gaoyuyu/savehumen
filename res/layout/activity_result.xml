<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:id="@+id/result_imgBg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/list_background" />
    
    <TextView
        android:id="@+id/textEndDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_above="@+id/textConStr"
        android:textSize="@dimen/result_text_endStr" />
    
	<TextView
        android:id="@+id/textConStr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_above="@+id/textFinalTime"
        android:layout_marginBottom="@dimen/result_texttime_margintop"
        android:textSize="@dimen/result_text_conStr"
        android:textColor="@android:color/black" />
    
    <TextView
        android:id="@+id/textFinalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/result_time_marginbottom"
        android:textSize="@dimen/result_time_text"
        android:textColor="@color/gold" />

    <Button
        android:id="@+id/shareBtn"
        android:layout_width="@dimen/main_btn_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textFinalTime"
        android:textSize="@dimen/all_btn_size"
        android:text="@string/shareText"
        android:background="@drawable/share_btn" />
    

</RelativeLayout>
