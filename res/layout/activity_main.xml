<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.activity.MainActivity"
    android:id="@+id/mainAct" >

    <ImageView
        android:id="@+id/main_imgBg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/lightsteelblue" />
    
    <TextView
        android:id="@+id/tvBestScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/main_txt_topleft"
        android:layout_marginLeft="@dimen/main_txt_topleft"
        android:textSize="@dimen/best_score_text"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tvLastScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvBestScore"
        android:layout_marginLeft="@dimen/main_txt_topleft"
        android:layout_marginTop="@dimen/main_txt_topleft"
        android:textSize="@dimen/best_score_text"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/result_time_marginbottom"
        android:text="@string/main_notstartText"
        android:textSize="@dimen/main_time_text"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTime"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/main_btn_margin_left"
        android:layout_marginRight="@dimen/main_btn_margin_right"
        android:text="@string/main_startBtn"
        android:textSize="@dimen/all_btn_size"
        android:background="@drawable/start_btn" />

    <Button
        android:id="@+id/btnUpdate"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:background="@drawable/update_btn" />

</RelativeLayout>
